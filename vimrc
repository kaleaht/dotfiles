syntax on
filetype plugin indent on

colorscheme desert

" Line numbers
set number
set relativenumber

" Leader key
let mapleader = ","

" Disable arrow keys
noremap <up> <nop>
noremap <down> <nop>
noremap <left> <nop>
noremap <right> <nop>

" Airline symbols
let g:airline_powerline_fonts = 1

" noremap  <Up> ""
" noremap! <Up> <Esc>
" noremap  <Down> ""
" noremap! <Down> <Esc>
" noaemap  <Left> ""
" noremap! <Left> <Esc>
" noremap  <Right> ""
" noremap! <Right> <Esc>

" system clipboard
set clipboard=unnamed

" use tabs
set autoindent noexpandtab tabstop=4 shiftwidth=4

let g:python_highlight_all = 1
" set colorcolumn=80
